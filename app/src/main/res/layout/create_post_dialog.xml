<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/post_dialog_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxHeight="300dp"
            android:src="@drawable/image_placeholder" />

        <EditText
            android:id="@+id/post_dialog_edittitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Enter Book Title"
            android:maxLines="1" />

        <EditText
            android:id="@+id/post_dialog_editauthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Enter Author"
            android:maxLines="1" />

        <EditText
            android:id="@+id/post_dialog_editcourse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Course Title"
            android:maxLines="1" />

        <EditText
            android:id="@+id/post_dialog_editprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Price"
            android:maxLines="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            //Dont delete this

            <ImageView
                android:id="@+id/post_dialog_select_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/ic_add_a_photo_black_24dp" />

            <EditText
                android:id="@+id/post_dialog_edittext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Additional Info"
                android:maxLines="5" />

            <ImageView
                android:id="@+id/post_dialog_send_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_send_black_24dp" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>